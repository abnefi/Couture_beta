<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagetenue"
        android:layout_height="60dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/face" />

    <TextView
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manche courte"
        android:layout_alignTop="@+id/imagetenue"
        android:layout_toRightOf="@+id/imagetenue"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="18dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_toEndOf="@+id/imagetenue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir ModÃ¨le >"
        android:id="@+id/voir_catalogue"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/model"
        android:layout_alignLeft="@+id/model"
        android:layout_alignStart="@+id/model" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observation"
        android:id="@+id/observation"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/voir_catalogue"
        android:layout_alignLeft="@+id/voir_catalogue"
        android:layout_alignStart="@+id/voir_catalogue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/imagetenue"
        android:layout_alignLeft="@+id/imagetenue"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/client_sexe"
        android:textColor="@color/year"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:text="1500"/>

</RelativeLayout>
